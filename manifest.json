{
    "manifest_version": 3,
    "name": "Mascot Wellness & Focus Reminder",
    "version": "1.0",
    "description": "An adorable mascot gives wellness reminders and helps you stay focused.",
    "icons": {
      "128": "icons/mascot.png"
    },
    "permissions": [
      "storage",
      "activeTab",
      "tabs"
    ],
    "host_permissions": ["*://*.youtube.com/*"],
    "background": {
      "service_worker": "scripts/background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/mascot.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["scripts/content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  